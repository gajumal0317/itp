<div class="elements">
<h1>投稿一覧</h1> 
<%= form_with(model: @rules_sort, url: search_path, method: :get, local: true) do |f| %>
<%= f.select :keyword, [ ['投稿が新しい順', 'new'],
                            ['投稿が古い順', 'old'],
                            ['いいねが多い順', 'likes'],
                            ['いいねが少ない順', 'dislikes'],
                          ]%>
<%= f.submit 'Sort', class: 'btn btn-primary btn-sm' %>

<% end %>
<div class="card-body">
    <%= render 'rules/rules', rules: @rules %> 
</div>　
</div>